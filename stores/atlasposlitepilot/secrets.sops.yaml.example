# Ejemplo de archivo de secretos
# Tienda: aspdemoshorustech
# 
# Opción 1: Usar directamente como secrets.yaml (sin encriptar - RECOMENDADO)
#   - Renombrar este archivo a secrets.yaml
#   - Editar los valores directamente
#   - Fleet lo leerá automáticamente
#
# Opción 2: Usar con SOPS (opcional - solo si necesitas encriptación)
#   - Renombrar a secrets.sops.yaml
#   - Editar: sops secrets.sops.yaml
#   - Encriptar: sops -e -i secrets.sops.yaml
#   - Nota: Fleet NO desencripta SOPS automáticamente

# Secretos para PostgreSQL
postgresql:
  password: "z@a?ALGm^=u6[8f]Ks5]"  # CONFIGURAR: Cambiar por password real
  pgadmin-password: "admin"  # CONFIGURAR: Cambiar por password real

# Cadena de conexión a base de datos
db-connection-string: "Host=poslite-postgres-db;Database=poslite;Username=sa;Password=z@a?ALGm^=u6[8f]Ks5];Trust Server Certificate=true;Include Error Detail=true;"  # CONFIGURAR: Actualizar password

# Configuración SMTP
smtp:
  password: "asp1234+"  # CONFIGURAR: Cambiar por password real
  to: "mgamboa@asptg.com"  # CONFIGURAR: Cambiar por email real

# Nota: Horustech no requiere password, solo PAM lo requiere

# Configuración Cloudflared
cloudflared:
  tunnel-id: ""  # CONFIGURAR: ID del tunnel de Cloudflare
  credentials: |
    {
      "AccountTag": "...",  # CONFIGURAR
      "TunnelSecret": "...",  # CONFIGURAR
      "TunnelID": "..."  # CONFIGURAR
    }

